<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edt1"
        android:hint="enter number"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edt2"
        android:hint="enter number"
        android:inputType="numberDecimal" />

    <TableRow>

        <Button
            android:id="@+id/num0"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/num1"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:id="@+id/num2"
            android:layout_weight="1"
            android:text="2" />

        <Button
            android:id="@+id/num3"
            android:layout_weight="1"
            android:text="3" />

        <Button
            android:id="@+id/num4"
            android:layout_weight="1"
            android:text="4" />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/num5"
            android:layout_weight="5"
            android:text="0" />

        <Button
            android:id="@+id/num6"
            android:layout_weight="6"
            android:text="1" />

        <Button
            android:id="@+id/num7"
            android:layout_weight="7"
            android:text="2" />

        <Button
            android:id="@+id/num8"
            android:layout_weight="8"
            android:text="3" />

        <Button
            android:id="@+id/num9"
            android:layout_weight="1"
            android:text="9" />

    </TableRow>

    <Button
        android:id="@+id/plus"
        android:layout_span="5"
        android:text="plus" />

    <Button
        android:id="@+id/minus"
        android:layout_span="5"
        android:text="minus" />

    <Button
        android:id="@+id/mul"
        android:layout_span="5"
        android:text="mul" />

    <Button
        android:id="@+id/divide"
        android:layout_span="5"
        android:text="divide" />
    <TextView
        android:id="@+id/result"
        android:text="result"
        android:textColor="#ff0000"/>


</TableLayout>
